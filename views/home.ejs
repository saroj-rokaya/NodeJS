    <!-- Card Section -->
    <div class="card-container">
      <% blogdata.forEach((data)=>{ %>
      <div class="card">
        <img src="<%- data.image %>" alt="Blog Image" />
        <div class="card-title"><%- data.title %></div>
        <a href="/singleBlog/<%- data.id %>">Read more..</a>
    </div>

      <% }) %>
